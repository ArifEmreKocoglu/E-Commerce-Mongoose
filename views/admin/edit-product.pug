extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href="/css/forms.css")
block content
    form(action="/admin/products" method="POST")

        input(type="hidden" name="id" value=`${product._id}`)

        div.form-group.row
            label(for="productName").col-sm-2.col-form-label Product Name
            div.col-sm-10
                input(type="text").form-control#name(name = "name" value=`${product.name}`)
        div.form-group.row
            label(for="price").col-sm-2.col-form-label Price
            div.col-sm-10
                input(type="text").form-control#price(name = "price" value=`${product.price}`)
        div.form-group.row
            label(for="imageUrl").col-sm-2.col-form-label Image
            div.col-sm-10
                input(type="text").form-control#imageUrl(name = "imageUrl" value=`${product.imageUrl}`)
        div.form-group.row
            label(for="categoryid").col-sm-2.col-form-label Category
            div.col-sm-10
                each  category in categories
                    input(type="checkbox" name="categoryids" value=`${category._id}`
                    checked=category.selected) 
                    | #{category.name}
                    br
        div.form-group.row
            label(for="description").col-sm-2.col-form-label Description
            div.col-sm-10
                textarea.form-control(name = "description" cols = "30", rows="10") #{product.description}

        div.form-group.row
            div.col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary
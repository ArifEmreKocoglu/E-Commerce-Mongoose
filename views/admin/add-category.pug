extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href="/css/forms.css")
block content
    form(action="/admin/add-category" method="POST")
                    div.form-group.row
                        label(for="categoryName").col-sm-2.col-form-label Category Name
                        div.col-sm-10
                            input(type="text").form-control#name(name = "name")
            
                    div.form-group.row
                        label(for="description").col-sm-2.col-form-label Description
                        div.col-sm-10
                            textarea.form-control(name = "description" cols = "30", rows="10")

                    div.form-group.row
                        div.col-sm-10.offset-sm-2
                            input(type="submit" value="Save Category").btn.btn-primary
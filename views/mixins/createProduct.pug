mixin createProduct(product)
 div.col-md-4
        div.card
            img(src=`/img/${product.imageUrl}`  alt=`${product.description}`).card-img-top
            div.card-body
                h4.card-title
                    a(href=`/products/${product._id}`) #{product.name}
                small.text-muted
                    i.fa.fa-try #{product.price}
            div.card-footer
                a(href=`/products/${product._id}`).btn.btn-outline-secondary.btn-sm Details
                
                form(action='/cart' method='POST')
                    input(type='hidden' name='productId' value=`${product._id}`)
                    button(type='submit').btn.btn-outline-secondary.btn-sm.ml-3 Add to cart
